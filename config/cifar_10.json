{
    "name": "CIFAR_10",
    "n_gpu": 1,
    "arch": {
        "type": "ResNet_18_2",
        "args": {"num_classes": 10}
    },
    "train_loader": {
		"type": "ClassificationDataLoader",
		"args":{
            "path_csv": "/DATA/Dataset/CIFAR_10/CIFAR_10_train.csv",
            "path_dataset": "/DATA/Dataset/CIFAR_10/CIFAR_10_train/",
            "is_train": true,
            "size": [32, 32],
            "padding": 4,
            "prob_flip": 0.5,
            "mean": [0.4914, 0.4822, 0.4465],
            "std": [0.2023, 0.1994, 0.2010],
            "shuffle": true,
			"batch_size": 128,
			"n_workers": 4,
			"pin_memory": true
		}
	},
    "test_loader": {
		"type": "ClassificationDataLoader",
		"args":{
            "path_csv": "/DATA/Dataset/CIFAR_10/CIFAR_10_test.csv",
            "path_dataset": "/DATA/Dataset/CIFAR_10/CIFAR_10_test/",
            "is_train": false,
            "size": [32, 32],
            "padding": 0,
            "prob_flip": 0.0,
            "mean": [0.4914, 0.4822, 0.4465],
            "std": [0.2023, 0.1994, 0.2010],
            "shuffle": false,
			"batch_size": 100,
			"n_workers": 4,
			"pin_memory": true
		}
	},
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.1,
            "momentum": 0.9,
            "weight_decay": 5e-4
        }
    },
    "loss": "CrossEntropyloss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "CosineAnnealingLR",
        "args": {
            "T_max": 200
        }
    },
    "trainer": {
        "is_amp": true,
        "is_cuda": true,
        "seed": 1234,
        "epochs": 200,
        "model_dir": "./saved/model/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": -1
    },
    "visualization":{
		"tensorboard": false,
		"log_dir": "./saved/log/"
	}
}
